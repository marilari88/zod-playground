{
  "name": "zod-playground",
  "private": true,
  "version": "1.2.2",
  "type": "module",
  "scripts": {
    "dev": "vite --clearScreen false",
    "build": "rm -rf dist/ && tsc && vite build",
    "preview": "vite preview",
    "types": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:perf && npm run test:e2e",
    "test:unit": "node --experimental-transform-types --test tests/zod.unit.ts",
    "test:perf": "node --experimental-transform-types --test tests/zod.perf.ts",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "test:install": "playwright install --with-deps chromium firefox",
    "test:uninstall": "playwright uninstall --all",
    "biome:ci": "biome ci",
    "biome:check": "biome check",
    "biome:write": "biome check --write"
  },
  "dependencies": {
    "@mantine/core": "^8.3.15",
    "@mantine/hooks": "^8.3.15",
    "@mantine/notifications": "^8.3.15",
    "@monaco-editor/react": "^4.7.0",
    "lz-string": "^1.5.0",
    "monaco-editor": "0.54.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^4.6.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "vite": "^7.3.1"
  }
}
